// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Income {
  id        String      @id @default(cuid())
  description      String
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user_Id    String 

  @@index([user_Id])
}

model Expense {
  id        String      @id @default(cuid())
  name      String
  amount    Float
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user_Id    String 

  @@index([user_Id])
}
